#: import TreeViewLabel kivy.uix.treeview.TreeViewLabel

<MyWidget>:
    size: root.size
    orientation: 'horizontal'
    padding: 10
    spacing: 0

    #GRAFICO CHART
    BoxLayout:
		id: plot
        padding: 10,10,10,10
        spacing: 2
        size_hint:0.40, 1
        orientation: 'vertical'
		BoxLayout:
            size_hint:1, 0.2
            orientation: 'horizontal'
            Button:
                size_hint:0.3, 1
                text: 'Run Estrategy'
            TextInput:
                size_hint:0.7, 1  
        Label:
            text: 'GRAFICOS RESULTADOS'
			id: label1
			color: 1,0,1,1
            size_hint:1, 0.8
			canvas.before:
				Color:
					rgba: 121/255.0, 44/255.0, 63/255.0, 1
				Rectangle:
					size: self.size
					pos: self.pos
    #MEDIO
    #historico de incidencias
	ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        id: historico
        padding: 10,10,10,10
        spacing: 10
        size_hint:0.35, 1
        GridLayout:
            id: his
            do_scroll_x: False
            height: self.minimum_height
            size_hint_y: None
            spacing: 10, 10
            cols: 1

            
		#Label:
		#	id: label2
