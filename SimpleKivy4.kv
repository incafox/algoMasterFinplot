		#		Rectangle:
		#			pos:self.pos
		#			size: self.size

    #controlador 
    BoxLayout:
        padding: 10,10,10,10
        spacing: 10
        size_hint: 0.25, 1
        orientation: 'vertical'
        #TITULO : PORTFOLIO
        BoxLayout:
            padding: 0,0,0,0
            spacing: 1
            size_hint:1, 0.05
            orientation: 'vertical'
            Label:
                text: 'PORTFOLIO MANAGER'
                id: label2
                color: 1,0,1,1
                canvas.before:
                    Color:
                        rgba:  60/255.0, 1/255.0, 33/255.0, 1
                    Rectangle:
                        pos:self.pos
                        size: self.size


        ScrollView:
            id: datos
            size_hint:1, 0.2
