                color: 1,1,1,1
            #TITULO DE DATASET SELECCIONADO
            Label:
                id: seleccionado
                text: ' '
                color: 1,0,1,1

        
        Button:
            size_hint:1, 0.1
            id: button1
            text: "fechas disponibles"
